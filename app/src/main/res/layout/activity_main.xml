<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <!-- Un solo hijo directo en el ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Age -->
            <TextView
                android:id="@+id/textViewAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad:"
                />
            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="30" />

            <!-- Sex Male -->
            <TextView
                android:id="@+id/textViewSexMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo (Masculino=1, Femenino=0):" />
            <EditText
                android:id="@+id/editTextSexMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <!-- Cholesterol -->
            <TextView
                android:id="@+id/textViewCholesterol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colesterol:" />
            <EditText
                android:id="@+id/editTextCholesterol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="170" />

            <!-- Systolic Pressure -->
            <TextView
                android:id="@+id/textViewSystolicPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presión Sistólica:" />
            <EditText
                android:id="@+id/editTextSystolicPressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="120" />

            <!-- Diastolic Pressure -->
            <TextView
                android:id="@+id/textViewDiastolicPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presión Diastólica:" />
            <EditText
                android:id="@+id/editTextDiastolicPressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="80" />

            <!-- Heart Rate -->
            <TextView
                android:id="@+id/textViewHeartRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frecuencia Cardíaca:" />
            <EditText
                android:id="@+id/editTextHeartRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="120" />

            <!-- Diabetes -->
            <TextView
                android:id="@+id/textViewDiabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diabetes (Sí=1, No=0):" />
            <EditText
                android:id="@+id/editTextDiabetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0" />

            <!-- Smoking -->
            <TextView
                android:id="@+id/textViewSmoking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fumar (Sí=1, No=0):" />
            <EditText
                android:id="@+id/editTextSmoking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <!-- Obesity -->
            <TextView
                android:id="@+id/textViewObesity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obesidad (Sí=1, No=0):" />
            <EditText
                android:id="@+id/editTextObesity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0" />

            <!-- Alcohol Consumption -->
            <TextView
                android:id="@+id/textViewAlcoholConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumo de Alcohol (Moderado=1, No=0):" />
            <EditText
                android:id="@+id/editTextAlcoholConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <!-- Exercise Hours Per Week -->
            <TextView
                android:id="@+id/textViewExerciseHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horas de Ejercicio por Semana:" />
            <EditText
                android:id="@+id/editTextExerciseHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="3" />

            <!-- Diet Balanced -->
            <TextView
                android:id="@+id/textViewDietBalanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dieta Equilibrada (Sí=1, No=0):" />
            <EditText
                android:id="@+id/editTextDietBalanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <!-- Previous Heart Problems -->
            <TextView
                android:id="@+id/textViewPreviousHeartProblems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problemas Cardíacos Previos (Sí=1, No=0):" />
            <EditText
                android:id="@+id/editTextPreviousHeartProblems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0" />

            <!-- Medication Use -->
            <TextView
                android:id="@+id/textViewMedicationUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uso de Medicamentos (No=1, Sí=0):" />
            <EditText
                android:id="@+id/editTextMedicationUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <!-- Stress Level -->
            <TextView
                android:id="@+id/textViewStressLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel de Estrés (Bajo=1, Alto=0):" />
            <EditText
                android:id="@+id/editTextStressLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <!-- Sedentary Hours Per Day -->
            <TextView
                android:id="@+id/textViewSedentaryHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horas Sedentarias por Día:" />
            <EditText
                android:id="@+id/editTextSedentaryHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="8" />

            <!-- Income -->
            <TextView
                android:id="@+id/textViewIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingreso:" />
            <EditText
                android:id="@+id/editTextIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="50000" />

            <!-- BMI -->
            <TextView
                android:id="@+id/textViewBMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Índice de Masa Corporal (BMI):" />
            <EditText
                android:id="@+id/editTextBMI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="10" />

            <!-- Triglycerides -->
            <TextView
                android:id="@+id/textViewTriglycerides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triglicéridos:" />
            <EditText
                android:id="@+id/editTextTriglycerides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="150" />

            <!-- Physical Activity Days Per Week -->
            <TextView
                android:id="@+id/textViewPhysicalActivityDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Días de Actividad Física por Semana:" />
            <EditText
                android:id="@+id/editTextPhysicalActivityDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="4" />

            <!-- Sleep Hours Per Day -->
            <TextView
                android:id="@+id/textViewSleepHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horas de Sueño por Día:" />
            <EditText
                android:id="@+id/editTextSleepHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="7" />

            <!-- Country -->
            <TextView
                android:id="@+id/textViewCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="País:" />
            <EditText
                android:id="@+id/editTextCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <!-- Continent -->
            <TextView
                android:id="@+id/textViewContinent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continente:" />
            <EditText
                android:id="@+id/editTextContinent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <!-- Hemisphere -->
            <TextView
                android:id="@+id/textViewHemisphere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hemisferio (Norte=1, Sur=0):" />
            <EditText
                android:id="@+id/editTextHemisphere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

            <!-- Family History of Heart Attacks -->
            <TextView
                android:id="@+id/textViewFamilyHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ataques Cardiacos Familiares(Si=1, No=0):" />
            <EditText
                android:id="@+id/editTextFamilyHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/confirmadr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/radius"
        android:text="Confirmar" />


</LinearLayout>
